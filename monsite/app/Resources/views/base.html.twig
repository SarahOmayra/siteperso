            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset ('js/animation.js') }}"></script>
            <script src="{{ asset ('js/fadeIn.js') }}"></script>
            <script src="{{ asset ('js/active.js') }}"></script>
        {% endblock %}

    </body>
</html>
